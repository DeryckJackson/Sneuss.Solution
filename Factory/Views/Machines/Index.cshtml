@{
  Layout = "_Layout";
}

@using Sneuss.Models; 
@model List<Sneuss.Models.Machine>;

<h1 class="jumbotron">Machines</h1>

@if (@Model.Count == 0)
{
  <h3> No Machines Have Been Added yet </h3>
}

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach(Machine mach in Model) 
    {
      <tr>
      <td>@mach.Name </td>
      <td>@mach.Details</td>
      <td>@Html.ActionLink("Edit", "Edit", new { id = mach.MachineId })  |  @Html.ActionLink("Details", "Details", new { id = mach.MachineId}) | @Html.ActionLink("Delete", "Delete", new { id = mach.MachineId})</td>
      </tr>
    }
  </tbody>
</table> 

<input type="button" class="btn btn-primary" value="Add a New Machine" onclick="location.href='@Url.Action("Create", "Machines")'" />
<input type="button" class="btn btn-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />