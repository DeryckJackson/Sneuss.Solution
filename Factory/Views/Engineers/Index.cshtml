@{
  Layout ="_Layout";
}

@using Sneuss.Models;
@model List<Sneuss.Models.Engineer>;

<h1 class="jumbotron"> Engineers </h1>

  @if(@Model.Count == 0)
  {
    <h3> No Engineers have been added yet.</h3>
  }

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  @foreach(Engineer eng in Model) 
    {
      <tr>
      <td>@eng.Name </td>
      <td>@eng.Details</td>
      <td>@Html.ActionLink("Edit", "Edit", new { id = eng.EngineerId })  |  @Html.ActionLink("Details", "Details", new { id = eng.EngineerId}) | @Html.ActionLink("Delete", "Delete", new { id = eng.EngineerId})</td>
      </tr>
    }
  </tbody>
</table> 

<input type="button" class="btn btn-primary" value="Add a New Engineer" onclick="location.href='@Url.Action("Create", "Engineers")'" />
<input type="button" class="btn btn-primary" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />